<h1>Welcome to dineXdash!</h1>


<div class='row'>
	<div class='small-9 columns'><h3>This is row 1.</h3></div>
	<div class='small-3 columns'><span class='button radius' id='expand'>Click this!</span></div>
</div>
<div class='row'>
	<h3>This is row 2.</h3>
</div>

<div id='row1'>
	<h3>This is row 1. <span class='button radius' id='expand'>Click this!</span></h3>

</div>
<div id='row2'>
	<h3>This is row 2</h3>
</div>


<script type="text/javascript">
var name = "<%= @restaurant.name %>"

	var extra = document.createElement('div');
	var txt = document.createTextNode(name + '');
	extra.appendChild(txt)
	$(function() {
		$('#expand').on('click', function(){
			$('#row1').append(extra)
		});
	});


</script>