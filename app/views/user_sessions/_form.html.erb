<%= form_tag user_sessions_path, remote: true, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions" id="login-button">
    <%= submit_tag "Login" %>
  </div>
<% end %>