<% @restaurant.menu_items.each do |i| %>
  <% if i.id.present? %>
  <%= i.item_name %>
  <%= number_to_currency(i.price) %>
  <% if current_user && current_user.id == @restaurant.owner.id %>
          <%= link_to "Delete", {:controller => :menu_items, :action => 'destroy', restaurant_id: i.restaurant.id, id: i.id}, :method => :delete, :confirm => 'Are you sure?' %> |
          <%= link_to "Edit", edit_restaurant_menu_item_path(@restaurant, i) %>
  <%end %>
  <p>
    <%= i.item_desc %>
  </p>
  <br>
  <% end %>
<% end %>